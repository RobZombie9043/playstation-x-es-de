<!-- 
1:1 aspect ratio
-->
<theme>
	<include>./colors.xml</include>
	
	<fontSize name="small">
		<variables>
			<carouselRadius>0.014</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<carouselRadius>0.016</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<carouselRadius>0.017</carouselRadius>
		</variables>
	</fontSize>
	
	<!--
	///
	System View
	///
	-->	
	<view name="system">
		<carousel name="system-carousel">
			<imageCornerRadius>${iconRadius}</imageCornerRadius>
		</carousel>
	</view>
	
	<!--
	///
	Gamelist View - Common
	///
	-->
	<view name="gamelist">
		<text name="game-playcount-label">
			<pos>0.32 0.068</pos>
			<size>0.16 0.08</size>
		</text>
		<text name="game-playcount">
			<pos>0.32 0.068</pos>
		</text>
		
		<text name="game-playtime-label">
			<pos>0.49 0.068</pos>
			<size>0.16 0.08</size>
		</text>
		<text name="game-playtime">
			<pos>0.49 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Carousels
	///
	-->
	<variant name="carousel-2d-description, carousel-2d-description-video, carousel-3d-description, carousel-3d-description-video">
		<view name="gamelist">
			<text name="game-name">
				<size>0.95 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			<text name="game-developer-dot">
				<pos>${gameDeveloperDotDesc} 0.225</pos>
			</text>
			<text name="game-developer">
				<pos>${gameDeveloperDesc} 0.225</pos>
				<size>${gameDeveloperDescSize} 0.03</size>
			</text>

			<text name="game-genre-dot">
				<pos>${gameGenreDotDesc} 0.255</pos>
			</text>
			<text name="game-genre">
				<pos>${gameGenreDesc} 0.255</pos>
				<size>${gameGenreDescSize} 0.03</size>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">
		<variables>
			<gameDeveloperDotDesc>0.063</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.080</gameDeveloperDesc>
			<gameDeveloperDescSize>0.495</gameDeveloperDescSize>
			<gameGenreDotDesc>0.107</gameGenreDotDesc>
			<gameGenreDesc>0.125</gameGenreDesc>
			<gameGenreDescSize>0.45</gameGenreDescSize>	
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<gameDeveloperDotDesc>0.068</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.085</gameDeveloperDesc>
			<gameDeveloperDescSize>0.49</gameDeveloperDescSize>
			<gameGenreDotDesc>0.1145</gameGenreDotDesc>
			<gameGenreDesc>0.1325</gameGenreDesc>
			<gameGenreDescSize>0.4425</gameGenreDescSize>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<gameDeveloperDotDesc>0.073</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.090</gameDeveloperDesc>
			<gameDeveloperDescSize>0.485</gameDeveloperDescSize>
			<gameGenreDotDesc>0.122</gameGenreDotDesc>
			<gameGenreDesc>0.14</gameGenreDesc>
			<gameGenreDescSize>0.435</gameGenreDescSize>
		</variables>
	</fontSize>
	
	<variant name="carousel-2d-mix, carousel-3d-mix">
		<view name="gamelist">
			<text name="game-name">
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			<text name="game-developer-dot">
				<pos>${gameDeveloperDot} 0.255</pos>
			</text>
			<text name="game-developer">
				<pos>${gameDeveloper} 0.255</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDot} 0.285</pos>
			</text>
			<text name="game-genre">
				<pos>${gameGenre} 0.285</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
		</view>
	</variant>
	
	<variant name="carousel-2d-both, carousel-2d-both-video, carousel-3d-both, carousel-3d-both-video">
		<view name="gamelist">
			<text name="game-name">
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			<text name="game-developer-dot">
				<pos>${gameDeveloperDot} 0.225</pos>
			</text>
			<text name="game-developer">
				<pos>${gameDeveloper} 0.225</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDot} 0.255</pos>
			</text>
			<text name="game-genre">
				<pos>${gameGenre} 0.255</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">
		<variables>
			<gameDeveloperDot>0.34375</gameDeveloperDot>
			<gameDeveloper>0.3625</gameDeveloper>
			<gameDeveloperSize>0.4875</gameDeveloperSize>
			<gameGenreDot>0.3825</gameGenreDot>
			<gameGenre>0.405</gameGenre>
			<gameGenreSize>0.445</gameGenreSize>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<gameDeveloperDot>0.346875</gameDeveloperDot>
			<gameDeveloper>0.365</gameDeveloper>
			<gameDeveloperSize>0.485</gameDeveloperSize>
			<gameGenreDot>0.38875</gameGenreDot>
			<gameGenre>0.41</gameGenre>
			<gameGenreSize>0.44</gameGenreSize>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<gameDeveloperDot>0.35</gameDeveloperDot>
			<gameDeveloper>0.3675</gameDeveloper>
			<gameDeveloperSize>0.4825</gameDeveloperSize>
			<gameGenreDot>0.395</gameGenreDot>
			<gameGenre>0.415</gameGenre>
			<gameGenreSize>0.435</gameGenreSize>
		</variables>
	</fontSize>
	
	<!--
	///
	Gamelist View - Grid
	///
	-->
	<variant name="grid">
		<view name="gamelist">
			<video name="game-screenshot">
				<pos>0.016 0.48</pos>
			</video>
				
			<text name="game-name">
				<pos>0.016 0.51</pos>
			</text>
			
			<datetime name="game-year">
				<pos>0.016 0.5625</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-developer">
				<pos>0.016 0.5975</pos>
				<size>0.253 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.016 0.6675</pos>
			</rating>
			
			<text name="game-genre-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-genre">
				<pos>0.016 0.6325</pos>
				<size>0.253 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.016 0.71</pos>
				<size>0.253 0.15</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.016 0.88</pos>
				<size>0.253 ${fontSizeBody}</size>
			</badges>
			
		</view>
	</variant>

</theme>