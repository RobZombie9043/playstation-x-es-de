<!-- 
1:1 aspect ratio
-->
<theme>
	<include>./colors.xml</include>
	
	<fontSize name="small">
		<variables>
			<carouselRadius>0.014</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<carouselRadius>0.016</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<carouselRadius>0.017</carouselRadius>
		</variables>
	</fontSize>
	
	<!--
	///
	System View
	///
	-->	
	<view name="system">
		<carousel name="system-carousel">
			<imageCornerRadius>${iconRadius}</imageCornerRadius>
		</carousel>
	</view>
	
	<!--
	///
	Gamelist View - Common
	///
	-->
	<view name="gamelist">
		<text name="game-playcount-label">
			<pos>0.32 0.068</pos>
			<size>0.16 0.08</size>
		</text>
		<text name="game-playcount">
			<pos>0.32 0.068</pos>
		</text>
		
		<text name="game-playtime-label">
			<pos>0.49 0.068</pos>
			<size>0.16 0.08</size>
		</text>
		<text name="game-playtime">
			<pos>0.49 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Carousels
	///
	-->
	<variant name="carousel, carousel-video">
		<view name="gamelist">
			<text name="game-name">
				<size>0.95 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			<text name="game-developer">
				<pos>${gameDeveloperDesc} 0.225</pos>
				<size>${gameDeveloperDescSize} 0.03</size>
			</text>

			<text name="game-genre">
				<pos>${gameGenreDesc} 0.255</pos>
				<size>${gameGenreDescSize} 0.03</size>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloperDesc>0.063</gameDeveloperDesc>
			<gameDeveloperDescSize>0.512</gameDeveloperDescSize>
			<gameGenreDesc>0.107</gameGenreDesc>
			<gameGenreDescSize>0.468</gameGenreDescSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloperDesc>0.068</gameDeveloperDesc>
			<gameDeveloperDescSize>0.507</gameDeveloperDescSize>
			<gameGenreDesc>0.1145</gameGenreDesc>
			<gameGenreDescSize>0.4605</gameGenreDescSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloperDesc>0.073</gameDeveloperDesc>
			<gameDeveloperDescSize>0.502</gameDeveloperDescSize>
			<gameGenreDesc>0.122</gameGenreDesc>
			<gameGenreDescSize>0.453</gameGenreDescSize>
		</variables>	
	</fontSize>		

	
	<variant name="carousel-media">
		<view name="gamelist">
			<text name="game-name">
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			<text name="game-developer">
				<pos>${gameDeveloper} 0.225</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			<text name="game-genre">
				<pos>${gameGenre} 0.255</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloper>0.34375</gameDeveloper>
			<gameDeveloperSize>0.50625</gameDeveloperSize>
			<gameGenre>0.3825</gameGenre>
			<gameGenreSize>0.4675</gameGenreSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloper>0.346875</gameDeveloper>
			<gameDeveloperSize>0.503125</gameDeveloperSize>
			<gameGenre>0.38875</gameGenre>
			<gameGenreSize>0.46125</gameGenreSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloper>0.35</gameDeveloper>
			<gameDeveloperSize>0.5</gameDeveloperSize>
			<gameGenre>0.395</gameGenre>
			<gameGenreSize>0.455</gameGenreSize>
		</variables>	
	</fontSize>		

	
	<!--
	///
	Gamelist View - Grid
	///
	-->
	<variant name="grid">
		<view name="gamelist">
			<video name="game-screenshot">
				<pos>0.016 0.48</pos>
			</video>
				
			<text name="game-name">
				<pos>0.016 0.51</pos>
			</text>
			
			<datetime name="game-year">
				<pos>0.016 0.5625</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-developer">
				<pos>0.016 0.5975</pos>
				<size>0.253 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.016 0.6675</pos>
			</rating>
			
			<text name="game-genre-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-genre">
				<pos>0.016 0.6325</pos>
				<size>0.253 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.016 0.71</pos>
				<size>0.253 0.15</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.016 0.88</pos>
				<size>0.253 ${fontSizeBody}</size>
			</badges>
			
		</view>
	</variant>
	
	<!--
	///
	Gamelist View - Textlist
	///
	-->
	<variant name="list">
		<view name="gamelist">
			<video name="game-miximage-video">
				<pos>0.76 0.38</pos>
				<maxSize>0.45 0.48</maxSize>
			</video>
			
			<datetime name="game-year">
				<pos>0.55 0.63</pos>
			</datetime>
			
			<text name="game-developer">
				<pos>0.61 0.63</pos>
				<size>0.22 0.03</size>
			</text>
			
			<text name="game-genre">
				<pos>0.55 0.67</pos>
				<size>0.28 0.03</size>
			</text>
			
			<rating name="game-rating">
				<origin>1 0.5</origin>
				<pos>0.985 0.665</pos>
			</rating>
			
			<image name="info-line">
				<pos>0.55 0.715</pos>
			</image>
			
			<text name="game-description">
				<pos>0.55 0.73</pos>
				<size>0.435 0.14</size>
			</text>
				
			<badges name="carousel-badges">
				<pos>0.55 0.88</pos>
			</badges>
		
		</view>
	</variant>
</theme>