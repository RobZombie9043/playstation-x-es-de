<!-- 
1:1 aspect ratio
-->
<theme>
	<include>./colors.xml</include>
	
	<fontSize name="small">
		<variables>
			<carouselRadius>0.006</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<carouselRadius>0.007</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<carouselRadius>0.008</carouselRadius>
		</variables>
	</fontSize>
	
	<!--
	///
	All Views
	///
	-->
	<view name="system,gamelist">
		<text name="user-name">
			<pos>0.7 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	System View
	///
	-->	
	<view name="system">
		<carousel name="system-carousel">
			<imageCornerRadius>${iconRadius}</imageCornerRadius>
		</carousel>
		<video name="system_video">
			<origin>1 0</origin>
			<pos>0.241 0.53</pos>
			<maxSize>0.225 0.36</maxSize>
		</video>
		<text name="system-details">
			<pos>0.257 0.53</pos>
			<size>0 0.06</size>
		</text>
		<text name="system-description">
			<pos>0.257 0.575</pos>
			<size>0.433 0.2</size>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Common
	///
	-->
	<view name="gamelist">
		<text name="game-playcount-label">
			<pos>0.29 0.068</pos>
			<size>0.10 0.08</size>
		</text>
		<text name="game-playcount">
			<pos>0.29 0.068</pos>
		</text>
		
		<text name="game-playtime-label">
			<pos>0.4 0.068</pos>
			<size>0.10 0.08</size>
		</text>
		<text name="game-playtime">
			<pos>0.4 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Carousels
	///
	-->
	<variant name="carousel, carousel-video, carousel-media">
		<view name="gamelist">
			<carousel name="game-carousel">
				<size>1 0.85</size>
			</carousel>
			<image name="game-miximage">
				<pos>0.1 0.3</pos>
			</image>
			<image name="console">
				<pos>0.175 0.45</pos>
				<maxSize>0.06 0.13</maxSize>
			</image>
		</view>		
	</variant>
	
	<variant name="carousel, carousel-video">
		<view name="gamelist">
			<text name="game-name">
				<size>0.95 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			<text name="game-developer">
				<pos>${gameDeveloperDesc} 0.225</pos>
				<size>${gameDeveloperDescSize} 0.03</size>
			</text>

			<text name="game-genre">
				<pos>${gameGenreDesc} 0.255</pos>
				<size>${gameGenreDescSize} 0.03</size>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloperDesc>0.05</gameDeveloperDesc>
			<gameDeveloperDescSize>0.525</gameDeveloperDescSize>
			<gameGenreDesc>0.07</gameGenreDesc>
			<gameGenreDescSize>0.505</gameGenreDescSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloperDesc>0.05125</gameDeveloperDesc>
			<gameDeveloperDescSize>0.52375</gameDeveloperDescSize>
			<gameGenreDesc>0.0725</gameGenreDesc>
			<gameGenreDescSize>0.5025</gameGenreDescSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloperDesc>0.0525</gameDeveloperDesc>
			<gameDeveloperDescSize>0.5225</gameDeveloperDescSize>
			<gameGenreDesc>0.075</gameGenreDesc>
			<gameGenreDescSize>0.5</gameGenreDescSize>
		</variables>	
	</fontSize>		

	
	<variant name="carousel-media">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.2 0.145</pos>
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			<datetime name="game-year">
				<pos>0.2 0.225</pos>
			</datetime>		
			<rating name="game-rating">
				<pos>0.2 0.255</pos>
			</rating>
			<text name="game-description">
				<pos>0.2 0.29</pos>
			</text>
			<badges name="carousel-badges">
				<pos>0.2 0.435</pos>
			</badges>
			
			<text name="game-developer">
				<pos>${gameDeveloper} 0.225</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<text name="game-genre">
				<pos>${gameGenre} 0.255</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
			<video name="game-miximage-video">
				<pos>0.1 0.3</pos>
			</video>
		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloper>0.225</gameDeveloper>
			<gameDeveloperSize>0.559</gameDeveloperSize>
			<gameGenre>0.245</gameGenre>
			<gameGenreSize>0.539</gameGenreSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloper>0.2275</gameDeveloper>
			<gameDeveloperSize>0.5565</gameDeveloperSize>
			<gameGenre>0.24875</gameGenre>
			<gameGenreSize>0.53525</gameGenreSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloper>0.23</gameDeveloper>
			<gameDeveloperSize>0.554</gameDeveloperSize>
			<gameGenre>0.2525</gameGenre>
			<gameGenreSize>0.5316</gameGenreSize>
		</variables>	
	</fontSize>		

	
	<!--
	///
	Gamelist View - Grid
	///
	-->
	<variant name="grid">
		<view name="gamelist">
	
			<text name="game-developer">
				<pos>${gameDeveloperGrid} 0.5775</pos>
				<size>${gameDeveloperGridSize} 0.03</size>
			</text>
			
			<text name="game-genre">
				<pos>${gameGenreGrid} 0.6075</pos>
				<size>${gameGenreGridSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<size>0.253 0.14</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.016 0.81</pos>
			</badges>

		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloperGrid>0.04</gameDeveloperGrid>
			<gameDeveloperGridSize>0.229</gameDeveloperGridSize>
			<gameGenreGrid>0.061</gameGenreGrid>
			<gameGenreGridSize>0.208</gameGenreGridSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloperGrid>0.0425</gameDeveloperGrid>
			<gameDeveloperGridSize>0.2265</gameDeveloperGridSize>
			<gameGenreGrid>0.0655</gameGenreGrid>
			<gameGenreGridSize>0.2035</gameGenreGridSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloperGrid>0.045</gameDeveloperGrid>
			<gameDeveloperGridSize>0.224</gameDeveloperGridSize>
			<gameGenreGrid>0.07</gameGenreGrid>
			<gameGenreGridSize>0.199</gameGenreGridSize>
		</variables>	
	</fontSize>		

	
	<!--
	///
	Gamelist View - Textlist
	///
	-->
	<variant name="list">
		<view name="gamelist">
			<image name="game-miximage">
				<origin>0.5 0.5</origin>
				<pos>0.65875 0.38</pos>
				<maxSize>0.21 0.48</maxSize>
				<imageType>${metadataImageType}</imageType>
				<zIndex>99</zIndex>
			</image>
			
			<video name="game-miximage-video">
				<origin>0.5 0.5</origin>
				<pos>0.87625 0.38</pos>
				<maxSize>0.21 0.48</maxSize>
				<imageType>none</imageType>
				<delay>0</delay>
			</video>
			
			<datetime name="game-year">
				<pos>0.55 0.63</pos>
			</datetime>
			
			<text name="game-developer">
				<pos>0.59 0.63</pos>
				<size>0.20 0.03</size>
			</text>
			
			<text name="game-genre">
				<pos>0.55 0.67</pos>
				<size>0.28 0.03</size>
			</text>
			
			<rating name="game-rating">
				<origin>1 0.5</origin>
				<pos>0.985 0.665</pos>
			</rating>
			
			<image name="info-line">
				<pos>0.55 0.715</pos>
			</image>
			
			<text name="game-description">
				<pos>0.55 0.73</pos>
				<size>0.435 0.14</size>
			</text>
				
			<badges name="carousel-badges">
				<pos>0.55 0.88</pos>
			</badges>
		</view>
	</variant>
	
</theme>