<!-- 
1:1 aspect ratio
-->
<theme>
	<include>./colors.xml</include>
	
	<fontSize name="small">
		<variables>
			<carouselRadius>0.022</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<carouselRadius>0.025</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<carouselRadius>0.028</carouselRadius>
		</variables>
	</fontSize>
	
	<!--
	///
	All Views
	///
	-->
	<view name="system,gamelist">
		<image name="user-icon">
			<pos>0.68 0.068</pos>
		</image>
		<image name="user-avatar">
			<pos>0.76 0.068</pos>
		</image>
		<text name="user-name">
			<visible>false</visible>
		</text>
		
		<helpsystem name="help">
			<entries>back,start,a,b</entries>
		</helpsystem>

	</view>
	
	
	<!--
	///
	System View
	///
	-->	
	<view name="system">
		<carousel name="system-carousel">
			<imageCornerRadius>${iconRadius}</imageCornerRadius>
		</carousel>
		<text name="systemName, autoCollectionName, customCollectionName">
			<size>0.523 0.06</size>
			<container>true</container>
			<containerType>horizontal</containerType>
		</text>
		<text name="system-gamecount">
			<pos>0.25 0.068</pos>
			<size>0 0.05</size>
		</text>
		<image name="overlay-arts">
			<origin>1 1</origin>
			<pos>1.2 1</pos>
			<size>0 0.9</size>
		</image>
		
		<video name="system_video">
			<maxSize>0.375 0.35</maxSize>
		</video>
	  
		<text name="system-details">
			<pos>0.407 0.53</pos>
			<size>0.577 0.06</size>
		</text>
		
		<text name="system-description">
			<pos>0.407 0.575</pos>
			<size>0.577 0.25</size>
			<container>true</container>
		</text>
		
		<image name="logo">
			<visible>false</visible>
		</image>
		
		<image name="console">
			<visible>false</visible>
		</image>
	</view>
	
	<!--
	///
	Gamelist View - Common
	///
	-->
	<view name="gamelist">
		<text name="game-playcount-label">
			<pos>0.34 0.068</pos>
			<size>0.19 0.08</size>
		</text>
		<text name="game-playcount">
			<pos>0.34 0.068</pos>
		</text>
		
		<text name="game-playtime-label">
			<pos>0.54 0.068</pos>
			<size>0.19 0.08</size>
		</text>
		<text name="game-playtime">
			<pos>0.54 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Carousels
	///
	-->
	<variant name="carousel, carousel-video, carousel-media">
		<view name="gamelist">			
			<image name="game-miximage">
				<pos>0.2 0.3</pos>
				<maxSize>0.368 0.3</maxSize>
			</image>
			<image name="console">
				<pos>0.38 0.45</pos>
				<maxSize>0.13 0.17</maxSize>
			</image>
		</view>
	</variant>
	
	<variant name="carousel, carousel-video">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.025 0.14</pos>
				<size>0.95 0.05</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.025 0.225</pos>
			</datetime>
			
			<text name="game-developer">
				<pos>${gameDeveloperDesc} 0.225</pos>
				<size>${gameDeveloperDescSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.025 0.255</pos>
			</rating>
			
			<text name="game-genre">
				<pos>${gameGenreDesc} 0.255</pos>
				<size>${gameGenreDescSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.025 0.295</pos>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloperDesc>0.0875</gameDeveloperDesc>
			<gameDeveloperDescSize>0.4875</gameDeveloperDescSize>
			<gameGenreDesc>0.1525</gameGenreDesc>
			<gameGenreDescSize>0.4225</gameGenreDescSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloperDesc>0.095</gameDeveloperDesc>
			<gameDeveloperDescSize>0.48</gameDeveloperDescSize>
			<gameGenreDesc>0.17125</gameGenreDesc>
			<gameGenreDescSize>0.40375</gameGenreDescSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloperDesc>0.1</gameDeveloperDesc>
			<gameDeveloperDescSize>0.4725</gameDeveloperDescSize>
			<gameGenreDesc>0.175</gameGenreDesc>
			<gameGenreDescSize>0.385</gameGenreDescSize>
		</variables>	
	</fontSize>		

		
	<variant name="carousel-media">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.4 0.145</pos>
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.4 0.225</pos>
			</datetime>
			
			<text name="game-developer">
				<pos>${gameDeveloper} 0.225</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.4 0.255</pos>
			</rating>
			
			<text name="game-genre">
				<pos>${gameGenre} 0.255</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.4 0.29</pos>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.4 0.435</pos>
			</badges>
			<video name="game-miximage-video">
				<pos>0.2 0.3</pos>
				<maxSize>0.368 0.3</maxSize>
			</video>
		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloper>0.4625</gameDeveloper>
			<gameDeveloperSize>0.5215</gameDeveloperSize>
			<gameGenre>0.525</gameGenre>
			<gameGenreSize>0.459</gameGenreSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloper>0.46875</gameDeveloper>
			<gameDeveloperSize>0.51525</gameDeveloperSize>
			<gameGenre>0.5375</gameGenre>
			<gameGenreSize>0.4465</gameGenreSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloper>0.475</gameDeveloper>
			<gameDeveloperSize>0.509</gameDeveloperSize>
			<gameGenre>0.55</gameGenre>
			<gameGenreSize>0.434</gameGenreSize>
		</variables>	
	</fontSize>		


	<!--
	///
	Gamelist View - Grid
	///
	-->
	<variant name="grid">
		<view name="gamelist">
			<video name="game-screenshot">
				<pos>0.016 0.41</pos>
				<maxSize>0.253 0.274</maxSize>
			</video>
				
			<text name="game-name">
				<pos>0.016 0.44</pos>
			</text>
			
			<datetime name="game-year">
				<pos>0.016 0.4925</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-developer">
				<pos>0.016 0.5275</pos>
				<size>0.253 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.016 0.5975</pos>
			</rating>
			
			<text name="game-genre-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-genre">
				<pos>0.016 0.5625</pos>
				<size>0.253 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.016 0.64</pos>
				<size>0.253 0.15</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.016 0.81</pos>
				<size>0.253 ${fontSizeBody}</size>
			</badges>
			
		</view>
	</variant>
	
	<!--
	///
	Gamelist View - Textlist
	///
	-->
	<variant name="list">
		<view name="gamelist">
			<video name="game-miximage-video">
				<pos>0.76 0.33</pos>
				<maxSize>0.45 0.38</maxSize>
			</video>
			
			<datetime name="game-year">
				<pos>0.55 0.54</pos>
			</datetime>
			
			<text name="game-developer">
				<pos>0.63 0.54</pos>
				<size>0.355 0.03</size>
			</text>
			
			<text name="game-genre">
				<pos>0.55 0.58</pos>
				<size>0.435 0.03</size>
			</text>
			
			<rating name="game-rating">
				<origin>0 0</origin>
				<pos>0.55 0.62</pos>
				<size>0 ${fontSizeBody}</size>
			</rating>
			
			<image name="info-line">
				<pos>0.55 0.6625</pos>
			</image>
			
			<text name="game-description">
				<pos>0.55 0.67</pos>
				<size>0.435 0.20</size>
			</text>
				
			<badges name="carousel-badges">
				<pos>0.55 0.88</pos>
			</badges>
			
		</view>
	</variant>

</theme>