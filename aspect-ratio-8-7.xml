<!-- 
1:1 aspect ratio
-->
<theme>
	<include>./colors.xml</include>
	
	<fontSize name="small">
		<variables>
			<carouselRadius>0.022</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<carouselRadius>0.025</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<carouselRadius>0.028</carouselRadius>
		</variables>
	</fontSize>
	
	<!--
	///
	All Views
	///
	-->
	<view name="system,gamelist">
		<image name="user-icon">
			<pos>0.68 0.068</pos>
		</image>
		<image name="user-avatar">
			<pos>0.76 0.068</pos>
		</image>
		<text name="user-name">
			<visible>false</visible>
		</text>
		
		<helpsystem name="help">
			<entries>back,start,a,b</entries>
		</helpsystem>

	</view>
	
	
	<!--
	///
	System View
	///
	-->	
	<view name="system">
		<carousel name="system-carousel">
			<imageCornerRadius>${iconRadius}</imageCornerRadius>
		</carousel>
		<text name="systemName, autoCollectionName, customCollectionName">
			<size>0.523 0.06</size>
			<container>true</container>
			<containerType>horizontal</containerType>
		</text>
		<text name="system-gamecount">
			<pos>0.25 0.068</pos>
			<size>0 0.05</size>
		</text>
		<image name="overlay-arts">
			<origin>1 1</origin>
			<pos>1.2 1</pos>
			<size>0 0.9</size>
		</image>
		
		<video name="system_video">
			<maxSize>0.455 0.35</maxSize>
		</video>
	  
		<text name="system-details">
			<pos>0.487 0.53</pos>
			<size>0.497 0.06</size>
		</text>
		
		<text name="system-description">
			<pos>0.487 0.575</pos>
			<size>0.497 0.25</size>
			<container>true</container>
		</text>
		
		<image name="logo">
			<visible>false</visible>
		</image>
		
		<image name="console">
			<visible>false</visible>
		</image>
	</view>
	
	<!--
	///
	Gamelist View - Common
	///
	-->
	<view name="gamelist">
		<text name="game-playcount-label">
			<visible>false</visible>
		</text>
		<text name="game-playcount">
			<visible>false</visible>
		</text>
		
		<text name="game-playtime-label">
			<pos>0.25 0.068</pos>
		</text>
		<text name="game-playtime">
			<pos>0.38 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Carousels
	///
	-->
	<variant name="carousel-2d-mix, carousel-2d-description, carousel-2d-both, carousel-3d-mix, carousel-3d-description, carousel-3d-both">
		<view name="gamelist">			
			<image name="game-miximage">
				<pos>0.2 0.3</pos>
				<maxSize>0.368 0.3</maxSize>
			</image>
			<image name="console">
				<pos>0.38 0.45</pos>
				<maxSize>0.13 0.17</maxSize>
			</image>
		</view>
	</variant>
	
	<variant name="carousel-2d-description, carousel-3d-description">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.025 0.14</pos>
				<size>0.95 0.05</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.025 0.225</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<pos>${gameDeveloperDotDesc} 0.225</pos>
			</text>
			
			<text name="game-developer">
				<pos>${gameDeveloperDesc} 0.225</pos>
				<size>${gameDeveloperDescSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.025 0.255</pos>
			</rating>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDotDesc} 0.255</pos>
			</text>
			
			<text name="game-genre">
				<pos>${gameGenreDesc} 0.255</pos>
				<size>${gameGenreDescSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.025 0.295</pos>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">
		<variables>
			<gameDeveloperDotDesc>0.0875</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.1075</gameDeveloperDesc>
			<gameDeveloperDescSize>0.4675</gameDeveloperDescSize>
			<gameGenreDotDesc>0.1525</gameGenreDotDesc>
			<gameGenreDesc>0.1775</gameGenreDesc>
			<gameGenreDescSize>0.3975</gameGenreDescSize>	
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<gameDeveloperDotDesc>0.095</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.11625</gameDeveloperDesc>
			<gameDeveloperDescSize>0.45875</gameDeveloperDescSize>
			<gameGenreDotDesc>0.17125</gameGenreDotDesc>
			<gameGenreDesc>0.1975</gameGenreDesc>
			<gameGenreDescSize>0.3775</gameGenreDescSize>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<gameDeveloperDotDesc>0.10</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.1225</gameDeveloperDesc>
			<gameDeveloperDescSize>0.45</gameDeveloperDescSize>
			<gameGenreDotDesc>0.175</gameGenreDotDesc>
			<gameGenreDesc>0.2025</gameGenreDesc>
			<gameGenreDescSize>0.3575</gameGenreDescSize>
		</variables>
	</fontSize>
	
	<variant name="carousel-2d-mix, carousel-3d-mix">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.4 0.16</pos>
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.4 0.255</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<pos>${gameDeveloperDot} 0.255</pos>
			</text>
			
			<text name="game-developer">
				<pos>${gameDeveloper} 0.255</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.4 0.285</pos>
			</rating>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDot} 0.285</pos>
			</text>
			
			<text name="game-genre">
				<pos>${gameGenre} 0.285</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.4 0.335</pos>
			</badges>
		</view>
	</variant>
	
	
	
	<variant name="carousel-2d-both, carousel-3d-both">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.4 0.145</pos>
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.4 0.225</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<pos>${gameDeveloperDot} 0.225</pos>
			</text>
			
			<text name="game-developer">
				<pos>${gameDeveloper} 0.225</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.4 0.255</pos>
			</rating>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDot} 0.255</pos>
			</text>
			
			<text name="game-genre">
				<pos>${gameGenre} 0.255</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.4 0.29</pos>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.4 0.435</pos>
			</badges>
		</view>
	</variant>
	
	<fontSize name="small">
		<variables>
			<gameDeveloperDot>0.4625</gameDeveloperDot>
			<gameDeveloper>0.485</gameDeveloper>
			<gameDeveloperSize>0.499</gameDeveloperSize>
			<gameGenreDot>0.525</gameGenreDot>
			<gameGenre>0.5475</gameGenre>
			<gameGenreSize>0.4365</gameGenreSize>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<gameDeveloperDot>0.46875</gameDeveloperDot>
			<gameDeveloper>0.4925</gameDeveloper>
			<gameDeveloperSize>0.4915</gameDeveloperSize>
			<gameGenreDot>0.5375</gameGenreDot>
			<gameGenre>0.56375</gameGenre>
			<gameGenreSize>0.42025</gameGenreSize>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<gameDeveloperDot>0.475</gameDeveloperDot>
			<gameDeveloper>0.50</gameDeveloper>
			<gameDeveloperSize>0.484</gameDeveloperSize>
			<gameGenreDot>0.55</gameGenreDot>
			<gameGenre>0.58</gameGenre>
			<gameGenreSize>0.404</gameGenreSize>
		</variables>
	</fontSize>

	<!--
	///
	Gamelist View - Grid
	///
	-->
	<variant name="grid">
		<view name="gamelist">
			<video name="game-screenshot">
				<pos>0.016 0.41</pos>
				<maxSize>0.253 0.274</maxSize>
			</video>
				
			<text name="game-name">
				<pos>0.016 0.44</pos>
			</text>
			
			<datetime name="game-year">
				<pos>0.016 0.4925</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-developer">
				<pos>0.016 0.5275</pos>
				<size>0.253 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.016 0.5975</pos>
			</rating>
			
			<text name="game-genre-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-genre">
				<pos>0.016 0.5625</pos>
				<size>0.253 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.016 0.64</pos>
				<size>0.253 0.15</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.016 0.81</pos>
				<size>0.253 ${fontSizeBody}</size>
			</badges>
			
		</view>
	</variant>

</theme>