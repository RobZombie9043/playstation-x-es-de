<!-- 
1:1 aspect ratio
-->
<theme>
	<include>./colors.xml</include>
	
	<fontSize name="small">
		<variables>
			<carouselRadius>0.018</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<carouselRadius>0.021</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<carouselRadius>0.024</carouselRadius>
		</variables>
	</fontSize>
	
	<!--
	///
	All Views
	///
	-->
	<view name="system,gamelist">
		<image name="user-icon">
			<pos>0.69 0.068</pos>
		</image>
		<image name="user-avatar">
			<pos>0.76 0.068</pos>
		</image>
		<text name="user-name">
			<visible>false</visible>
		</text>
		
		<helpsystem name="help">
			<entries>back,start,a,b,x,y</entries>
		</helpsystem>

	</view>
	
	<!--
	///
	System View
	///
	-->	
	<view name="system">
		<carousel name="system-carousel">
			<imageCornerRadius>${iconRadius}</imageCornerRadius>
		</carousel>
		<image name="overlay-arts">
			<origin>1 1</origin>
			<pos>1.1 1</pos>
			<size>0 0.9</size>
		</image>
		<video name="system_video">
			<maxSize>0.325 0.358</maxSize>
		</video>
		<text name="system-details">
			<pos>0.357 0.53</pos>
			<size>0 0.06</size>
		</text>
		<text name="system-description">
			<pos>0.357 0.575</pos>
			<size>0.433 0.2</size>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Common
	///
	-->
	<view name="gamelist">
		<text name="game-playcount-label">
			<pos>0.34 0.068</pos>
			<size>0.18 0.08</size>
		</text>
		<text name="game-playcount">
			<pos>0.34 0.068</pos>
		</text>
		
		<text name="game-playtime-label">
			<pos>0.53 0.068</pos>
			<size>0.18 0.08</size>
		</text>
		<text name="game-playtime">
			<pos>0.53 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Carousels
	///
	-->
	<variant name="carousel, carousel-video, carousel-media">
		<view name="gamelist">			
			<image name="game-miximage">
				<pos>0.2 0.3</pos>
				<maxSize>0.368 0.3</maxSize>
			</image>
			<image name="console">
				<pos>0.3975 0.45</pos>
				<maxSize>0.15 0.17</maxSize>
			</image>
		</view>
	</variant>
	
	<variant name="carousel, carousel-video">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.025 0.14</pos>
				<size>0.95 0.05</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.025 0.225</pos>
			</datetime>
			
			<text name="game-developer">
				<pos>${gameDeveloperDesc} 0.225</pos>
				<size>${gameDeveloperDescSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.025 0.255</pos>
			</rating>
			
			<text name="game-genre">
				<pos>${gameGenreDesc} 0.255</pos>
				<size>${gameGenreDescSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.025 0.295</pos>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloperDesc>0.083</gameDeveloperDesc>
			<gameDeveloperDescSize>0.492</gameDeveloperDescSize>
			<gameGenreDesc>0.1325</gameGenreDesc>
			<gameGenreDescSize>0.4425</gameGenreDescSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloperDesc>0.089</gameDeveloperDesc>
			<gameDeveloperDescSize>0.486</gameDeveloperDescSize>
			<gameGenreDesc>0.14375</gameGenreDesc>
			<gameGenreDescSize>0.43125</gameGenreDescSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloperDesc>0.095</gameDeveloperDesc>
			<gameDeveloperDescSize>0.48</gameDeveloperDescSize>
			<gameGenreDesc>0.155</gameGenreDesc>
			<gameGenreDescSize>0.42</gameGenreDescSize>
		</variables>	
	</fontSize>		

	
	<variant name="carousel-media">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.4 0.145</pos>
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.4 0.225</pos>
			</datetime>

			<text name="game-developer">
				<pos>${gameDeveloper} 0.225</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.4 0.255</pos>
			</rating>
			
			<text name="game-genre">
				<pos>${gameGenre} 0.255</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.4 0.29</pos>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.4 0.435</pos>
			</badges>
			<video name="game-miximage-video">
				<pos>0.2 0.3</pos>
				<maxSize>0.368 0.3</maxSize>
			</video>
		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloper>0.4575</gameDeveloper>
			<gameDeveloperSize>0.5265</gameDeveloperSize>
			<gameGenre>0.5075</gameGenre>
			<gameGenreSize>0.4765</gameGenreSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloper>0.46375</gameDeveloper>
			<gameDeveloperSize>0.52025</gameDeveloperSize>
			<gameGenre>0.52</gameGenre>
			<gameGenreSize>0.464</gameGenreSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloper>0.47</gameDeveloper>
			<gameDeveloperSize>0.514</gameDeveloperSize>
			<gameGenre>0.5325</gameGenre>
			<gameGenreSize>0.4515</gameGenreSize>
		</variables>	
	</fontSize>		


	<!--
	///
	Gamelist View - Grid
	///
	-->
	<variant name="grid">
		<view name="gamelist">
			<video name="game-screenshot">
				<pos>0.016 0.44</pos>
				<maxSize>0.253 0.304</maxSize>
			</video>
				
			<text name="game-name">
				<pos>0.016 0.47</pos>
			</text>
			
			<datetime name="game-year">
				<pos>0.016 0.5225</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-developer">
				<pos>0.016 0.5575</pos>
				<size>0.253 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.016 0.6275</pos>
			</rating>
			
			<text name="game-genre-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-genre">
				<pos>0.016 0.5925</pos>
				<size>0.253 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.016 0.67</pos>
				<size>0.253 0.15</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.016 0.84</pos>
				<size>0.253 ${fontSizeBody}</size>
			</badges>
			
		</view>
	</variant>

	<!--
	///
	Gamelist View - Textlist
	///
	-->
	<variant name="list">
		<view name="gamelist">
			<video name="game-miximage-video">
				<pos>0.76 0.34</pos>
				<maxSize>0.45 0.40</maxSize>
			</video>
			
			<datetime name="game-year">
				<pos>0.55 0.56</pos>
			</datetime>
			
			<text name="game-developer">
				<pos>0.62 0.56</pos>
				<size>0.365 0.03</size>
			</text>
			
			<text name="game-genre">
				<pos>0.55 0.60</pos>
				<size>0.435 0.03</size>
			</text>
			
			<rating name="game-rating">
				<origin>0 0</origin>
				<pos>0.55 0.64</pos>
				<size>0 ${fontSizeBody}</size>
			</rating>
			
			<image name="info-line">
				<pos>0.55 0.6825</pos>
			</image>
			
			<text name="game-description">
				<pos>0.55 0.69</pos>
				<size>0.435 0.18</size>
			</text>
				
			<badges name="carousel-badges">
				<pos>0.55 0.88</pos>
			</badges>
		
		</view>
	</variant>
	
</theme>