<!-- 
1:1 aspect ratio
-->
<theme>
	<include>./colors.xml</include>
	
	<fontSize name="small">
		<variables>
			<carouselRadius>0.018</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<carouselRadius>0.021</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<carouselRadius>0.024</carouselRadius>
		</variables>
	</fontSize>
	
	<!--
	///
	All Views
	///
	-->
	<view name="system,gamelist">
		<image name="user-icon">
			<pos>0.69 0.068</pos>
		</image>
		<image name="user-avatar">
			<pos>0.76 0.068</pos>
		</image>
		<text name="user-name">
			<visible>false</visible>
		</text>
		
		<helpsystem name="help">
			<entries>back,start,a,b,x,y</entries>
		</helpsystem>

	</view>
	
	<!--
	///
	System View
	///
	-->	
	<view name="system">
		<carousel name="system-carousel">
			<imageCornerRadius>${iconRadius}</imageCornerRadius>
		</carousel>
		<image name="overlay-arts">
			<origin>1 1</origin>
			<pos>1.1 1</pos>
			<size>0 0.9</size>
		</image>
		<video name="system_video">
			<maxSize>0.325 0.338</maxSize>
		</video>
		<text name="system-details">
			<pos>0.357 0.53</pos>
			<size>0 0.06</size>
		</text>
		<text name="system-description">
			<pos>0.357 0.575</pos>
			<size>0.433 0.2</size>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Common
	///
	-->
	<view name="gamelist">
		<text name="game-playcount-label">
			<visible>false</visible>
		</text>
		<text name="game-playcount">
			<visible>false</visible>
		</text>
		
		<text name="game-playtime-label">
			<pos>0.25 0.068</pos>
		</text>
		<text name="game-playtime">
			<pos>0.35 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Carousels
	///
	-->
	<variant name="carousel-2d-mix, carousel-2d-description, carousel-2d-both, carousel-3d-mix, carousel-3d-description, carousel-3d-both">
		<view name="gamelist">			
			<image name="game-miximage">
				<pos>0.2 0.3</pos>
				<maxSize>0.368 0.3</maxSize>
			</image>
			<image name="console">
				<pos>0.3975 0.45</pos>
				<maxSize>0.15 0.17</maxSize>
			</image>
		</view>
	</variant>
	
	<variant name="carousel-2d-description, carousel-3d-description">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.025 0.14</pos>
				<size>0.95 0.05</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.025 0.225</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<pos>${gameDeveloperDotDesc} 0.225</pos>
			</text>
			
			<text name="game-developer">
				<pos>${gameDeveloperDesc} 0.225</pos>
				<size>${gameDeveloperDescSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.025 0.255</pos>
			</rating>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDotDesc} 0.255</pos>
			</text>
			
			<text name="game-genre">
				<pos>${gameGenreDesc} 0.255</pos>
				<size>${gameGenreDescSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.025 0.295</pos>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">
		<variables>
			<gameDeveloperDotDesc>0.083</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.1025</gameDeveloperDesc>
			<gameDeveloperDescSize>0.4725</gameDeveloperDescSize>
			<gameGenreDotDesc>0.1325</gameGenreDotDesc>
			<gameGenreDesc>0.1525</gameGenreDesc>
			<gameGenreDescSize>0.4225</gameGenreDescSize>	
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<gameDeveloperDotDesc>0.089</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.11125</gameDeveloperDesc>
			<gameDeveloperDescSize>0.46375</gameDeveloperDescSize>
			<gameGenreDotDesc>0.14375</gameGenreDotDesc>
			<gameGenreDesc>0.1675</gameGenreDesc>
			<gameGenreDescSize>0.4075</gameGenreDescSize>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<gameDeveloperDotDesc>0.095</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.12</gameDeveloperDesc>
			<gameDeveloperDescSize>0.455</gameDeveloperDescSize>
			<gameGenreDotDesc>0.155</gameGenreDotDesc>
			<gameGenreDesc>0.1825</gameGenreDesc>
			<gameGenreDescSize>0.3925</gameGenreDescSize>
		</variables>
	</fontSize>
	
	<variant name="carousel-2d-mix, carousel-3d-mix">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.4 0.16</pos>
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.4 0.255</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<pos>${gameDeveloperDot} 0.255</pos>
			</text>
			
			<text name="game-developer">
				<pos>${gameDeveloper} 0.255</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.4 0.285</pos>
			</rating>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDot} 0.285</pos>
			</text>
			
			<text name="game-genre">
				<pos>${gameGenre} 0.285</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.4 0.335</pos>
			</badges>
		</view>
	</variant>
	
	
	
	<variant name="carousel-2d-both, carousel-3d-both">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.4 0.145</pos>
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.4 0.225</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<pos>${gameDeveloperDot} 0.225</pos>
			</text>
			
			<text name="game-developer">
				<pos>${gameDeveloper} 0.225</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.4 0.255</pos>
			</rating>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDot} 0.255</pos>
			</text>
			
			<text name="game-genre">
				<pos>${gameGenre} 0.255</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.4 0.29</pos>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.4 0.435</pos>
			</badges>
		</view>
	</variant>
	
	<fontSize name="small">
		<variables>
			<gameDeveloperDot>0.4575</gameDeveloperDot>
			<gameDeveloper>0.4775</gameDeveloper>
			<gameDeveloperSize>0.5065</gameDeveloperSize>
			<gameGenreDot>0.5075</gameGenreDot>
			<gameGenre>0.5275</gameGenre>
			<gameGenreSize>0.4565</gameGenreSize>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<gameDeveloperDot>0.46375</gameDeveloperDot>
			<gameDeveloper>0.48625</gameDeveloper>
			<gameDeveloperSize>0.49775</gameDeveloperSize>
			<gameGenreDot>0.52</gameGenreDot>
			<gameGenre>0.54625</gameGenre>
			<gameGenreSize>0.43775</gameGenreSize>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<gameDeveloperDot>0.47</gameDeveloperDot>
			<gameDeveloper>0.495</gameDeveloper>
			<gameDeveloperSize>0.489</gameDeveloperSize>
			<gameGenreDot>0.5325</gameGenreDot>
			<gameGenre>0.565</gameGenre>
			<gameGenreSize>0.419</gameGenreSize>
		</variables>
	</fontSize>

	<!--
	///
	Gamelist View - Grid
	///
	-->
	<variant name="grid">
		<view name="gamelist">
			<video name="game-screenshot">
				<pos>0.016 0.44</pos>
			</video>
				
			<text name="game-name">
				<pos>0.016 0.47</pos>
			</text>
			
			<datetime name="game-year">
				<pos>0.016 0.5225</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-developer">
				<pos>0.016 0.5575</pos>
				<size>0.253 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.016 0.6275</pos>
			</rating>
			
			<text name="game-genre-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-genre">
				<pos>0.016 0.5925</pos>
				<size>0.253 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.016 0.67</pos>
				<size>0.253 0.15</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.016 0.84</pos>
				<size>0.253 ${fontSizeBody}</size>
			</badges>
			
		</view>
	</variant>

</theme>