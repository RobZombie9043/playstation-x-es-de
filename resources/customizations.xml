<theme>
	<variables>
		<!-- Username and avatar customizations -->
		<userName>PlayStation-X</userName>
		<avatarPath>./_inc/images/avatar.webp</avatarPath>
		
		<!-- System View customizations -->
		<characterOverlayVisible>true</characterOverlayVisible>			<!-- show character overlay art -->
		<systemVideoVisible>true</systemVideoVisible>					<!-- show advert video -->
		<secondaryDescriptionPos>false</secondaryDescriptionPos>		<!-- shift description text left, useful to combine with removing videos -->
		<systemVideoAudio>true</systemVideoAudio>						<!-- play advert video audio -->
		<systemLogoVisible>true</systemLogoVisible>						<!-- show system logo -->
		<systemConsoleVisible>true</systemConsoleVisible>				<!-- show system console art -->
		<systemBackgroundSolidColor>false</systemBackgroundSolidColor>	<!-- use a solid color background in system view -->
		<systemBackgroundColor>000000</systemBackgroundColor>			<!-- color background to be used -->
		
		<!-- Gamelist View customizations -->
		<gameBackgroundSolidColor>false</gameBackgroundSolidColor>		<!-- use a solid color background in gamelist view -->
		<gameBackgroundColor>000000</gameBackgroundColor>				<!-- color background to be used -->
		<gameVideoAudio>true</gameVideoAudio>							<!-- play game video audio -->
		<gameVideoDelay>2</gameVideoDelay>								<!-- delay in seconds before video plays -->
		<carouselImageType>cover</carouselImageType>					<!-- type of image to display in gamelist carousel e.g. cover, 3dbox-->
		<metadataImageType>miximage</metadataImageType>					<!-- type of image to display in gamelist metadata e.g. miximage, screenshot, titlescreen, cover-->
		
		<gameVideoVisible>true</gameVideoVisible>						<!-- show game video, if true set <gameImageVisible> to false -->
		<gameImageVisible>false</gameImageVisible>						<!-- show game media image, if true set <gameVideoVisible> to false -->
	</variables>
</theme>