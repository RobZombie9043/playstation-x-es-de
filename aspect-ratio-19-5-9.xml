<!-- 
1:1 aspect ratio
-->
<theme>
	<include>./colors.xml</include>
	
	<fontSize name="small">
		<variables>
			<carouselRadius>0.010</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<carouselRadius>0.012</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<carouselRadius>0.013</carouselRadius>
		</variables>
	</fontSize>
	
	<!--
	///
	All Views
	///
	-->
	<view name="system,gamelist">
		<text name="user-name">
			<pos>0.71 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	System View
	///
	-->	
	<view name="system">
		<carousel name="system-carousel">
			<imageCornerRadius>${iconRadius}</imageCornerRadius>
		</carousel>
		<video name="system_video">
			<maxSize>0.2 0.36</maxSize>
		</video>
		<text name="system-details">
			<pos>0.232 0.53</pos>
			<size>0 0.06</size>
		</text>
		<text name="system-description">
			<pos>0.232 0.575</pos>
			<size>0.458 0.2</size>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Common
	///
	-->
	<variant name="carousel, carousel-video, carousel-media">
		<view name="gamelist">
			<image name="console">
				<pos>0.27 0.45</pos>
				<maxSize>0.10 0.13</maxSize>
			</image>
		</view>		
	</variant>
	
	<view name="gamelist">
		<text name="game-playcount-label">
			<pos>0.32 0.068</pos>
			<size>0.15 0.08</size>
		</text>
		<text name="game-playcount">
			<pos>0.32 0.068</pos>
		</text>
		
		<text name="game-playtime-label">
			<pos>0.48 0.068</pos>
			<size>0.15 0.08</size>
		</text>
		<text name="game-playtime">
			<pos>0.48 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Carousels
	///
	-->
	<variant name="carousel, carousel-video">
		<view name="gamelist">
			<text name="game-name">
				<size>0.95 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			<text name="game-developer">
				<pos>${gameDeveloperDesc} 0.225</pos>
				<size>${gameDeveloperDescSize} 0.03</size>
			</text>

			<text name="game-genre">
				<pos>${gameGenreDesc} 0.255</pos>
				<size>${gameGenreDescSize} 0.03</size>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloperDesc>0.061</gameDeveloperDesc>
			<gameDeveloperDescSize>0.514</gameDeveloperDescSize>
			<gameGenreDesc>0.0955</gameGenreDesc>
			<gameGenreDescSize>0.4795</gameGenreDescSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloperDesc>0.066</gameDeveloperDesc>
			<gameDeveloperDescSize>0.509</gameDeveloperDescSize>
			<gameGenreDesc>0.10275</gameGenreDesc>
			<gameGenreDescSize>0.47225</gameGenreDescSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloperDesc>0.071</gameDeveloperDesc>
			<gameDeveloperDescSize>0.504</gameDeveloperDescSize>
			<gameGenreDesc>0.11</gameGenreDesc>
			<gameGenreDescSize>0.465</gameGenreDescSize>
		</variables>	
	</fontSize>		

	
	<variant name="carousel-media">
		<view name="gamelist">
			<text name="game-name">
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<text name="game-developer">
				<pos>${gameDeveloper} 0.225</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<text name="game-genre">
				<pos>${gameGenre} 0.255</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloper>0.34</gameDeveloper>
			<gameDeveloperSize>0.544</gameDeveloperSize>
			<gameGenre>0.375</gameGenre>
			<gameGenreSize>0.509</gameGenreSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloper>0.3425</gameDeveloper>
			<gameDeveloperSize>0.5415</gameDeveloperSize>
			<gameGenre>0.38</gameGenre>
			<gameGenreSize>0.504</gameGenreSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloper>0.345</gameDeveloper>
			<gameDeveloperSize>0.539</gameDeveloperSize>
			<gameGenre>0.385</gameGenre>
			<gameGenreSize>0.499</gameGenreSize>
		</variables>	
	</fontSize>		

	
	<!--
	///
	Gamelist View - Grid
	///
	-->
	<variant name="grid">
		<view name="gamelist">
			<text name="game-developer">
				<pos>${gameDeveloperGrid} 0.5775</pos>
				<size>${gameDeveloperGridSize} 0.03</size>
			</text>
			
			<text name="game-genre">
				<pos>${gameGenreGrid}5 0.6075</pos>
				<size>${gameGenreGridSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<size>0.253 0.14</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.016 0.81</pos>
			</badges>

		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloperGrid>0.047</gameDeveloperGrid>
			<gameDeveloperGridSize>0.222</gameDeveloperGridSize>
			<gameGenreGrid>0.079</gameGenreGrid>
			<gameGenreGridSize>0.19</gameGenreGridSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloperGrid>0.0505</gameDeveloperGrid>
			<gameDeveloperGridSize>0.2185</gameDeveloperGridSize>
			<gameGenreGrid>0.0855</gameGenreGrid>
			<gameGenreGridSize>0.1835</gameGenreGridSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloperGrid>0.054</gameDeveloperGrid>
			<gameDeveloperGridSize>0.215</gameDeveloperGridSize>
			<gameGenreGrid>0.092</gameGenreGrid>
			<gameGenreGridSize>0.177</gameGenreGridSize>
		</variables>	
	</fontSize>		

	
	<!--
	///
	Gamelist View - Textlist
	///
	-->
	<variant name="list">
		<view name="gamelist">
			<video name="game-miximage-video">
				<pos>0.76 0.38</pos>
				<maxSize>0.45 0.48</maxSize>
			</video>
			
			<datetime name="game-year">
				<pos>0.55 0.63</pos>
			</datetime>
			
			<text name="game-developer">
				<pos>0.60 0.63</pos>
				<size>0.19 0.03</size>
			</text>
			
			<text name="game-genre">
				<pos>0.55 0.67</pos>
				<size>0.28 0.03</size>
			</text>
			
			<rating name="game-rating">
				<origin>1 0.5</origin>
				<pos>0.985 0.665</pos>
			</rating>
			
			<image name="info-line">
				<pos>0.55 0.715</pos>
			</image>
			
			<text name="game-description">
				<pos>0.55 0.73</pos>
				<size>0.435 0.14</size>
			</text>
				
			<badges name="carousel-badges">
				<pos>0.55 0.88</pos>
			</badges>
	
		</view>
	</variant>
</theme>