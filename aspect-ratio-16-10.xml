<!-- 
1:1 aspect ratio
-->
<theme>
	<include>./colors.xml</include>
	
	<fontSize name="small">
		<variables>
			<carouselRadius>0.015</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<carouselRadius>0.017</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<carouselRadius>0.019</carouselRadius>
		</variables>
	</fontSize>
	
	<!--
	///
	All Views
	///
	-->
	<view name="system,gamelist">
		<text name="user-name">
			<pos>0.725 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	System View
	///
	-->	
	<view name="system">
		<carousel name="system-carousel">
			<imageCornerRadius>${iconRadius}</imageCornerRadius>
		</carousel>
		
		<image name="overlay-arts">
			<origin>1 1</origin>
			<pos>1.1 1</pos>
			<size>0 1</size>
		</image>
		<video name="system_video">
			<maxSize>0.275 0.36</maxSize>
		</video>
		<text name="system-details">
			<pos>0.308 0.53</pos>
			<size>0 0.06</size>
		</text>
		<text name="system-description">
			<pos>0.308 0.575</pos>
			<size>0.468 0.2</size>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Common
	///
	-->
	<view name="gamelist">
		<text name="game-playcount-label">
			<pos>0.32 0.068</pos>
			<size>0.16 0.08</size>
		</text>
		<text name="game-playcount">
			<pos>0.32 0.068</pos>
		</text>
		
		<text name="game-playtime-label">
			<pos>0.49 0.068</pos>
			<size>0.16 0.08</size>
		</text>
		<text name="game-playtime">
			<pos>0.49 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Carousels
	///
	-->
	<variant name="carousel, carousel-video">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.025 0.14</pos>
				<size>0.95 0.05</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.025 0.225</pos>
			</datetime>
			
			<text name="game-developer">
				<pos>${gameDeveloperDesc} 0.225</pos>
				<size>${gameDeveloperDescSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.025 0.255</pos>
			</rating>
			
			<text name="game-genre">
				<pos>${gameGenreDesc} 0.255</pos>
				<size>${gameGenreDescSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.025 0.295</pos>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloperDesc>0.075</gameDeveloperDesc>
			<gameDeveloperDescSize>0.5</gameDeveloperDescSize>
			<gameGenreDesc>0.12</gameGenreDesc>
			<gameGenreDescSize>0.455</gameGenreDescSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloperDesc>0.08</gameDeveloperDesc>
			<gameDeveloperDescSize>0.495</gameDeveloperDescSize>
			<gameGenreDesc>0.13</gameGenreDesc>
			<gameGenreDescSize>0.445</gameGenreDescSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloperDesc>0.085</gameDeveloperDesc>
			<gameDeveloperDescSize>0.49</gameDeveloperDescSize>
			<gameGenreDesc>0.14</gameGenreDesc>
			<gameGenreDescSize>0.435</gameGenreDescSize>
		</variables>	
	</fontSize>		

	
	<variant name="carousel-media">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.3 0.145</pos>
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.3 0.225</pos>
			</datetime>
			
			<text name="game-developer">
				<pos>${gameDeveloper} 0.225</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.3 0.255</pos>
			</rating>
			
			<text name="game-genre">
				<pos>${gameGenre} 0.255</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.3 0.29</pos>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.3 0.435</pos>
			</badges>
		</view>
	</variant>
	
	<fontSize name="small">		
		<variables>	
			<gameDeveloper>0.35</gameDeveloper>
			<gameDeveloperSize>0.534</gameDeveloperSize>
			<gameGenre>0.396</gameGenre>
			<gameGenreSize>0.488</gameGenreSize>
		</variables>	
	</fontSize>		
	<fontSize name="medium">		
		<variables>	
			<gameDeveloper>0.355</gameDeveloper>
			<gameDeveloperSize>0.529</gameDeveloperSize>
			<gameGenre>0.4055</gameGenre>
			<gameGenreSize>0.4785</gameGenreSize>
		</variables>	
	</fontSize>		
	<fontSize name="large">		
		<variables>	
			<gameDeveloper>0.36</gameDeveloper>
			<gameDeveloperSize>0.524</gameDeveloperSize>
			<gameGenre>0.415</gameGenre>
			<gameGenreSize>0.469</gameGenreSize>
		</variables>	
	</fontSize>		

	
	<!--
	///
	Gamelist View - Grid
	///
	-->
	<variant name="grid">
		<view name="gamelist">
			<video name="game-screenshot">
				<pos>0.016 0.465</pos>
				<maxSize>0.253 0.329</maxSize>
			</video>
				
			<text name="game-name">
				<pos>0.016 0.495</pos>
			</text>
			
			<datetime name="game-year">
				<pos>0.016 0.5475</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-developer">
				<pos>0.016 0.5825</pos>
				<size>0.253 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.016 0.6525</pos>
			</rating>
			
			<text name="game-genre-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-genre">
				<pos>0.016 0.6175</pos>
				<size>0.253 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.016 0.695</pos>
				<size>0.253 0.15</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.016 0.865</pos>
				<size>0.253 ${fontSizeBody}</size>
			</badges>
			
		</view>
	</variant>
	
	<!--
	///
	Gamelist View - Textlist
	///
	-->
	<variant name="list">
		<view name="gamelist">
			<video name="game-miximage-video">
				<pos>0.76 0.38</pos>
				<maxSize>0.45 0.48</maxSize>
			</video>
			
			<datetime name="game-year">
				<pos>0.55 0.63</pos>
			</datetime>
			
			<text name="game-developer">
				<pos>0.61 0.63</pos>
				<size>0.22 0.03</size>
			</text>
			
			<text name="game-genre">
				<pos>0.55 0.67</pos>
				<size>0.28 0.03</size>
			</text>
			
			<rating name="game-rating">
				<origin>1 0.5</origin>
				<pos>0.985 0.665</pos>
			</rating>
			
			<image name="info-line">
				<pos>0.55 0.715</pos>
			</image>
			
			<text name="game-description">
				<pos>0.55 0.73</pos>
				<size>0.435 0.14</size>
			</text>
				
			<badges name="carousel-badges">
				<pos>0.55 0.88</pos>
			</badges>
	
		</view>
	</variant>
</theme>