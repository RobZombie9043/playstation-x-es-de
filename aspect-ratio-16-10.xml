<!-- 
1:1 aspect ratio
-->
<theme>
	<include>./colors.xml</include>
	
	<fontSize name="small">
		<variables>
			<carouselRadius>0.015</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<carouselRadius>0.017</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<carouselRadius>0.019</carouselRadius>
		</variables>
	</fontSize>
	
	<!--
	///
	All Views
	///
	-->
	<view name="system,gamelist">
		<text name="user-name">
			<pos>0.725 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	System View
	///
	-->	
	<view name="system">
		<carousel name="system-carousel">
			<imageCornerRadius>${iconRadius}</imageCornerRadius>
		</carousel>
		
		<image name="overlay-arts">
			<origin>1 1</origin>
			<pos>1.1 1</pos>
			<size>0 1</size>
		</image>
		<video name="system_video">
			<maxSize>0.285 0.338</maxSize>
		</video>
		<text name="system-details">
			<pos>0.318 0.53</pos>
			<size>0 0.06</size>
		</text>
		<text name="system-description">
			<pos>0.318 0.575</pos>
			<size>0.458 0.2</size>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Common
	///
	-->
	<view name="gamelist">
		<text name="game-playcount-label">
			<pos>0.24 0.068</pos>
		</text>
		<text name="game-playcount">
			<pos>0.36 0.068</pos>
		</text>
		
		<text name="game-playtime-label">
			<pos>0.4225 0.068</pos>
		</text>
		<text name="game-playtime">
			<pos>0.505 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Carousels
	///
	-->
	<variant name="carousel-2d-description, carousel-3d-description">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.025 0.14</pos>
				<size>0.95 0.05</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.025 0.225</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<pos>${gameDeveloperDotDesc} 0.225</pos>
			</text>
			
			<text name="game-developer">
				<pos>${gameDeveloperDesc} 0.225</pos>
				<size>${gameDeveloperDescSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.025 0.255</pos>
			</rating>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDotDesc} 0.255</pos>
			</text>
			
			<text name="game-genre">
				<pos>${gameGenreDesc} 0.255</pos>
				<size>${gameGenreDescSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.025 0.295</pos>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">
		<variables>
			<gameDeveloperDotDesc>0.075</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.09575</gameDeveloperDesc>
			<gameDeveloperDescSize>0.47925</gameDeveloperDescSize>
			<gameGenreDotDesc>0.12</gameGenreDotDesc>
			<gameGenreDesc>0.1425</gameGenreDesc>
			<gameGenreDescSize>0.4325</gameGenreDescSize>	
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<gameDeveloperDotDesc>0.08</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.101625</gameDeveloperDesc>
			<gameDeveloperDescSize>0.473375</gameDeveloperDescSize>
			<gameGenreDotDesc>0.13</gameGenreDotDesc>
			<gameGenreDesc>0.15375</gameGenreDesc>
			<gameGenreDescSize>0.42125</gameGenreDescSize>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<gameDeveloperDotDesc>0.085</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.1075</gameDeveloperDesc>
			<gameDeveloperDescSize>0.4675</gameDeveloperDescSize>
			<gameGenreDotDesc>0.14</gameGenreDotDesc>
			<gameGenreDesc>0.165</gameGenreDesc>
			<gameGenreDescSize>0.41</gameGenreDescSize>
		</variables>
	</fontSize>
	
	<variant name="carousel-2d-mix, carousel-3d-mix">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.3 0.16</pos>
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.3 0.255</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<pos>${gameDeveloperDot} 0.255</pos>
			</text>
			
			<text name="game-developer">
				<pos>${gameDeveloper} 0.255</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.3 0.285</pos>
			</rating>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDot} 0.285</pos>
			</text>
			
			<text name="game-genre">
				<pos>${gameGenre} 0.285</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.3 0.335</pos>
			</badges>
		</view>
	</variant>
	
	
	
	<variant name="carousel-2d-both, carousel-3d-both">
		<view name="gamelist">
			<text name="game-name">
				<pos>0.3 0.145</pos>
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<datetime name="game-year">
				<pos>0.3 0.225</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<pos>${gameDeveloperDot} 0.225</pos>
			</text>
			
			<text name="game-developer">
				<pos>${gameDeveloper} 0.225</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.3 0.255</pos>
			</rating>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDot} 0.255</pos>
			</text>
			
			<text name="game-genre">
				<pos>${gameGenre} 0.255</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.3 0.29</pos>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.3 0.435</pos>
			</badges>
		</view>
	</variant>
	
	<fontSize name="small">
		<variables>
			<gameDeveloperDot>0.35</gameDeveloperDot>
			<gameDeveloper>0.37</gameDeveloper>
			<gameDeveloperSize>0.514</gameDeveloperSize>
			<gameGenreDot>0.396</gameGenreDot>
			<gameGenre>0.4175</gameGenre>
			<gameGenreSize>0.4665</gameGenreSize>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<gameDeveloperDot>0.355</gameDeveloperDot>
			<gameDeveloper>0.3775</gameDeveloper>
			<gameDeveloperSize>0.5065</gameDeveloperSize>
			<gameGenreDot>0.4055</gameGenreDot>
			<gameGenre>0.42875</gameGenre>
			<gameGenreSize>0.45525</gameGenreSize>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<gameDeveloperDot>0.36</gameDeveloperDot>
			<gameDeveloper>0.385</gameDeveloper>
			<gameDeveloperSize>0.499</gameDeveloperSize>
			<gameGenreDot>0.415</gameGenreDot>
			<gameGenre>0.44</gameGenre>
			<gameGenreSize>0.444</gameGenreSize>
		</variables>
	</fontSize>
	
	<!--
	///
	Gamelist View - Grid
	///
	-->
	<variant name="grid">
		<view name="gamelist">
			<video name="game-screenshot">
				<pos>0.016 0.465</pos>
				<maxSize>0.253 0.329</maxSize>
			</video>
				
			<text name="game-name">
				<pos>0.016 0.495</pos>
			</text>
			
			<datetime name="game-year">
				<pos>0.016 0.5475</pos>
			</datetime>
			
			<text name="game-developer-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-developer">
				<pos>0.016 0.5825</pos>
				<size>0.253 0.03</size>
			</text>
			
			<rating name="game-rating">
				<pos>0.016 0.6525</pos>
			</rating>
			
			<text name="game-genre-dot">
				<visible>false</visible>
			</text>
			
			<text name="game-genre">
				<pos>0.016 0.6175</pos>
				<size>0.253 0.03</size>
			</text>
			
			<text name="game-description">
				<pos>0.016 0.695</pos>
				<size>0.253 0.15</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.016 0.865</pos>
				<size>0.253 ${fontSizeBody}</size>
			</badges>
			
		</view>
	</variant>

</theme>