<!-- 
1:1 aspect ratio
-->
<theme>
	<include>./colors.xml</include>
	
	<fontSize name="small">
		<variables>
			<carouselRadius>0.008</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<carouselRadius>0.010</carouselRadius>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<carouselRadius>0.012</carouselRadius>
		</variables>
	</fontSize>
	
	<!--
	///
	All Views
	///
	-->
	<view name="system,gamelist">
		<text name="user-name">
			<pos>0.71 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	System View
	///
	-->	
	<view name="system">
		<carousel name="system-carousel">
			<imageCornerRadius>${iconRadius}</imageCornerRadius>
		</carousel>
		<video name="system_video">
			<origin>1 0</origin>
			<pos>0.241 0.53</pos>
			<maxSize>0.225 0.36</maxSize>
		</video>
		<text name="system-details">
			<pos>0.257 0.53</pos>
			<size>0 0.06</size>
		</text>
		<text name="system-description">
			<pos>0.257 0.575</pos>
			<size>0.433 0.2</size>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Common
	///
	-->
	<view name="gamelist">
		<text name="game-playcount-label">
			<pos>0.24 0.068</pos>
		</text>
		<text name="game-playcount">
			<pos>0.3175 0.068</pos>
		</text>
		
		<text name="game-playtime-label">
			<pos>0.3825 0.068</pos>
		</text>
		<text name="game-playtime">
			<pos>0.435 0.068</pos>
		</text>
	</view>
	
	<!--
	///
	Gamelist View - Carousels
	///
	-->
	<variant name="carousel-2d-mix, carousel-2d-description, carousel-2d-both, carousel-3d-mix, carousel-3d-description, carousel-3d-both">
		<view name="gamelist">
			<carousel name="game-carousel">
				<size>1 0.825</size>
			</carousel>
			<image name="console">
				<pos>0.255 0.45</pos>
				<maxSize>0.08 0.13</maxSize>
			</image>
		</view>		
	</variant>
	
	<variant name="carousel-2d-description, carousel-3d-description">
		<view name="gamelist">
			<text name="game-name">
				<size>0.95 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			<text name="game-developer-dot">
				<pos>${gameDeveloperDotDesc} 0.225</pos>
			</text>
			<text name="game-developer">
				<pos>${gameDeveloperDesc} 0.225</pos>
				<size>${gameDeveloperDescSize} 0.03</size>
			</text>

			<text name="game-genre-dot">
				<pos>${gameGenreDotDesc} 0.255</pos>
			</text>
			<text name="game-genre">
				<pos>${gameGenreDesc} 0.255</pos>
				<size>${gameGenreDescSize} 0.03</size>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">
		<variables>
			<gameDeveloperDotDesc>0.06</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.0755</gameDeveloperDesc>
			<gameDeveloperDescSize>0.4995</gameDeveloperDescSize>
			<gameGenreDotDesc>0.093</gameGenreDotDesc>
			<gameGenreDesc>0.11</gameGenreDesc>
			<gameGenreDescSize>0.465</gameGenreDescSize>	
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<gameDeveloperDotDesc>0.064</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.0825</gameDeveloperDesc>
			<gameDeveloperDescSize>0.4925</gameDeveloperDescSize>
			<gameGenreDotDesc>0.1</gameGenreDotDesc>
			<gameGenreDesc>0.120625</gameGenreDesc>
			<gameGenreDescSize>0.454375</gameGenreDescSize>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<gameDeveloperDotDesc>0.068</gameDeveloperDotDesc>
			<gameDeveloperDesc>0.0895</gameDeveloperDesc>
			<gameDeveloperDescSize>0.4855</gameDeveloperDescSize>
			<gameGenreDotDesc>0.107</gameGenreDotDesc>
			<gameGenreDesc>0.13125</gameGenreDesc>
			<gameGenreDescSize>0.44375</gameGenreDescSize>
		</variables>
	</fontSize>
	
	<variant name="carousel-2d-mix, carousel-3d-mix">
		<view name="gamelist">
			<text name="game-name">
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<text name="game-developer-dot">
				<pos>${gameDeveloperDot} 0.255</pos>
			</text>
			<text name="game-developer">
				<pos>${gameDeveloper} 0.255</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDot} 0.285</pos>
			</text>
			<text name="game-genre">
				<pos>${gameGenre} 0.285</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
		</view>
	</variant>
	
	<variant name="carousel-2d-both, carousel-3d-both">
		<view name="gamelist">
			<text name="game-name">
				<size>0.584 0.06</size>
				<container>true</container>
				<containerType>horizontal</containerType>
			</text>
			
			<text name="game-developer-dot">
				<pos>${gameDeveloperDot} 0.225</pos>
			</text>
			<text name="game-developer">
				<pos>${gameDeveloper} 0.225</pos>
				<size>${gameDeveloperSize} 0.03</size>
			</text>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDot} 0.255</pos>
			</text>
			<text name="game-genre">
				<pos>${gameGenre} 0.255</pos>
				<size>${gameGenreSize} 0.03</size>
			</text>
		</view>
	</variant>
	
	<fontSize name="small">
		<variables>
			<gameDeveloperDot>0.34</gameDeveloperDot>
			<gameDeveloper>0.36</gameDeveloper>
			<gameDeveloperSize>0.524</gameDeveloperSize>
			<gameGenreDot>0.371</gameGenreDot>
			<gameGenre>0.392</gameGenre>
			<gameGenreSize>0.492</gameGenreSize>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<gameDeveloperDot>0.34185</gameDeveloperDot>
			<gameDeveloper>0.3625</gameDeveloper>
			<gameDeveloperSize>0.5215</gameDeveloperSize>
			<gameGenreDot>0.376125</gameGenreDot>
			<gameGenre>0.39725</gameGenre>
			<gameGenreSize>0.48675</gameGenreSize>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<gameDeveloperDot>0.3437</gameDeveloperDot>
			<gameDeveloper>0.365</gameDeveloper>
			<gameDeveloperSize>0.519</gameDeveloperSize>
			<gameGenreDot>0.38125</gameGenreDot>
			<gameGenre>0.4025</gameGenre>
			<gameGenreSize>0.4815</gameGenreSize>
		</variables>
	</fontSize>
	
	<!--
	///
	Gamelist View - Grid
	///
	-->
	<variant name="grid">
		<view name="gamelist">
	
			<text name="game-developer-dot">
				<pos>${gameDeveloperDotGrid} 0.5775</pos>
			</text>
			<text name="game-developer">
				<pos>${gameDeveloperGrid} 0.5775</pos>
				<size>${gameDeveloperGridSize} 0.03</size>
			</text>
			
			<text name="game-genre-dot">
				<pos>${gameGenreDotGrid} 0.6075</pos>
			</text>
			<text name="game-genre">
				<pos>${gameGenreGrid}5 0.6075</pos>
				<size>${gameGenreGridSize} 0.03</size>
			</text>
			
			<text name="game-description">
				<size>0.253 0.14</size>
			</text>
			
			<badges name="carousel-badges">
				<pos>0.016 0.81</pos>
			</badges>

		</view>
	</variant>
	
	<fontSize name="small">
		<variables>
			<gameDeveloperDotGrid>0.045</gameDeveloperDotGrid>
			<gameDeveloperGrid>0.055</gameDeveloperGrid>
			<gameDeveloperGridSize>0.214</gameDeveloperGridSize>
			<gameGenreDotGrid>0.0775</gameGenreDotGrid>
			<gameGenreGrid>0.088</gameGenreGrid>
			<gameGenreGridSize>0.181</gameGenreGridSize>
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<gameDeveloperDotGrid>0.049</gameDeveloperDotGrid>
			<gameDeveloperGrid>0.0605</gameDeveloperGrid>
			<gameDeveloperGridSize>0.2085</gameDeveloperGridSize>
			<gameGenreDotGrid>0.08425</gameGenreDotGrid>
			<gameGenreGrid>0.096</gameGenreGrid>
			<gameGenreGridSize>0.173</gameGenreGridSize>
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<gameDeveloperDotGrid>0.053</gameDeveloperDotGrid>
			<gameDeveloperGrid>0.066</gameDeveloperGrid>
			<gameDeveloperGridSize>0.203</gameDeveloperGridSize>
			<gameGenreDotGrid>0.091</gameGenreDotGrid>
			<gameGenreGrid>0.104</gameGenreGrid>
			<gameGenreGridSize>0.165</gameGenreGridSize>
		</variables>
	</fontSize>

</theme>